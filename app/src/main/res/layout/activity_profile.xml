<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile4"
    tools:context="hicham.info3245.com.bakeryapp.Profile">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/tvProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="casual"
            android:text="Profile"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:id="@+id/tvName"
        android:layout_below="@+id/tvProfile"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:textSize="25sp"
        android:textColor="#C51162" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:id="@+id/tvAddress"
        android:layout_below="@+id/tvName"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:visibility="gone"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telephone:"
        android:id="@+id/tvPhoneInfo"
        android:layout_below="@+id/tvAddress"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:visibility="gone"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:id="@+id/tvEmail"
        android:textSize="20sp"
        android:visibility="gone"
        android:layout_below="@+id/tvPhoneInfo"
        android:layout_alignParentStart="true"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Info"
        android:id="@+id/tvPayment"
        android:textSize="20sp"
        android:visibility="gone"
        android:textColor="#000000"
        android:layout_below="@+id/tvEmail"
        android:layout_alignParentStart="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttons"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:weightSum="100"
        android:layout_below="@+id/tvPayment">

        <Button
            android:id="@+id/btnShop"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="50"
            android:layout_below="@+id/btnAddPaymentInfo"
            android:background="@color/colorAccent"
            android:text="Go Shop"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnAddPaymentInfo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="50"
            android:background="@color/colorAccent"
            android:text="Add Payment "
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </LinearLayout>

        <Button
            android:id="@+id/btnvieworder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttons"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"
            android:text="View Orders"
            android:textColor="#ffffff"></Button>

    <TextView
        android:id="@+id/tvOrders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnvieworder"
        android:layout_marginTop="20dp"
        android:text="Pending Orders"
        android:textColor="#090909"
        android:textSize="20sp" />

    </RelativeLayout>

    </ScrollView>
</RelativeLayout>
