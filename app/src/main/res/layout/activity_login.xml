<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bbb"
    tools:context="hicham.info3245.com.bakeryapp.Login">


    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="wrap_content"
        android:layout_height="288dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-medium"
        android:text="WELCOME
                          TO
                             DIEB"
        android:textAlignment="center"
        android:textColor="#0B0B0B"
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <EditText
        android:id="@+id/txtUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnJoin"
        android:layout_alignTop="@+id/txtUser"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:hint="ENTER USERNAME"
        android:textColorHint="#090909"
        android:textColor="#050505"
        android:layout_alignLeft="@+id/btnJoin"
        android:layout_alignParentRight="true" />

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtPasswordMsg"
        android:layout_alignEnd="@+id/txtUsername"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/txtPasswordMsg"
        android:ems="10"
        android:hint="ENTER PASSWORD"
        android:textColorHint="#0B0A0A"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/txtPasswordMsg"
        android:layout_alignRight="@+id/txtUsername" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="100">


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPassword"
            android:layout_weight="50"
            android:background="@drawable/roundedbtn"
            android:text="@string/btnSignIn"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnJoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:background="@drawable/roundedbtn"
            android:text="SIGN UP!"
            android:textColor="#ffffff"
            android:textSize="25sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtError"
        android:layout_width="324dp"
        android:layout_height="96dp"
        android:layout_below="@+id/txtPassword"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="16dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ff0000" />
</LinearLayout>
